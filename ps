#include <stdio.h>
#define MAX 10

int main() {
    int n, bt[MAX], pr[MAX], p[MAX], wt[MAX], tat[MAX];
    int i, j, pos, temp;
    float avg_wt = 0, avg_tat = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("Enter Burst Time and Priority for Process %d: ", i + 1);
        scanf("%d %d", &bt[i], &pr[i]);
        p[i] = i + 1; // store process id
    }

    // Sort by priority (lower number = higher priority)
    for (i = 0; i < n - 1; i++) {
        pos = i;
        for (j = i + 1; j < n; j++) {
            if (pr[j] < pr[pos])
                pos = j;
        }
        // swap priority
        temp = pr[i]; pr[i] = pr[pos]; pr[pos] = temp;
        // swap burst time
        temp = bt[i]; bt[i] = bt[pos]; bt[pos] = temp;
        // swap process id
        temp = p[i]; p[i] = p[pos]; p[pos] = temp;
    }

    wt[0] = 0; // first process waiting time = 0

    for (i = 1; i < n; i++) {
        wt[i] = 0;
        for (j = 0; j < i; j++)
            wt[i] += bt[j];
        avg_wt += wt[i];
    }

    printf("\nProcess\tBurst\tPriority\tWaiting\tTurnaround");
    for (i = 0; i < n; i++) {
        tat[i] = bt[i] + wt[i];
        avg_tat += tat[i];
        printf("\nP%d\t%d\t%d\t\t%d\t%d", p[i], bt[i], pr[i], wt[i], tat[i]);
    }

    printf("\n\nAverage Waiting Time = %.2f", avg_wt / n);
    printf("\nAverage Turnaround Time = %.2f\n", avg_tat / n);

    return 0;
}
